<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/premiumPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/isPremiumWakeuply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:visibility="visible">


            <TextView
                android:id="@+id/isTitlePremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_view_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/app_premium"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/isTextPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/card_view_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:text="@string/is_premium_text"
                android:textAlignment="center"
                android:textSize="14dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/premiumWakeuply"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:visibility="gone">


            <TextView
                android:id="@+id/titlePremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_view_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/app_premium"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textPremium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_view_white"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:text="@string/premium_text"
                android:textAlignment="center"
                android:textSize="14dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:background="@color/card_view_white"
                android:padding="0dp">

                <Button
                    android:id="@+id/premiumFacebookgone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center|center_horizontal"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/facebook_ico"
                    android:drawablePadding="5dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="25dp"
                    android:tag="premiumFacebook"
                    android:text="Facebook"
                    android:textAllCaps="false"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/premiumFacebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center|center_horizontal"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/facebook_ico"
                    android:drawablePadding="5dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="25dp"
                    android:tag="premiumFacebook"
                    android:text="Facebook"
                    android:textAllCaps="false" />


                <Button
                    android:id="@+id/premiumInstagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center|center_horizontal"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/instagram_ico"
                    android:drawablePadding="5dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="25dp"
                    android:tag="premiumInstagram"
                    android:text="Instagram"
                    android:textAllCaps="false" />


            </TableRow>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>