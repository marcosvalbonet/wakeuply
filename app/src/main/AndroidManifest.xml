                    android:screenOrientation="portrait"/>
                <activity
                    android:name=".presentation.alarmclock.ActivityAlarmSettings"
                    android:theme="@style/AppThemeDark"
                    android:finishOnTaskLaunch="true"/>
                <activity
                    android:name=".presentation.alarmclock.ActivityAppSettings"
                    android:theme="@style/AppThemeDark"
                    android:finishOnTaskLaunch="true"/>
                <activity
                    android:name=".presentation.searcher.SearcherUserActivity"
                    android:theme="@style/AppThemeDark"
                    android:screenOrientation="portrait">

                    <meta-data
                        android:name="android.app.searchable"
                        android:resource="@xml/searchable"/>
                </activity>

                <activity
                    android:name="com.valbonet.wakeuplyapp.presentation.PlayUserWebActivity"
                    android:theme="@style/AppThemeDark"
                    android:screenOrientation="portrait">
                </activity>
                <activity
                    android:name="com.valbonet.wakeuplyapp.presentation.PlayUserActivity"
                    android:theme="@style/AppThemeDark"
                    android:screenOrientation="portrait">
                </activity>
                <activity
                    android:name="com.valbonet.wakeuplyapp.presentation.PlayVideoActivity"
                    android:theme="@style/AppThemeDark"
                    android:screenOrientation="portrait">
                </activity>
                <activity
                    android:name="com.valbonet.wakeuplyapp.presentation.PlayVideoPagerActivity"
                    android:theme="@style/AppThemeDark"
                    android:screenOrientation="portrait">
                </activity>
                <activity
                    android:name="com.valbonet.wakeuplyapp.presentation.PlayVideoPagerAdapterActivity"
                    android:theme="@style/AppThemeDark"
                    android:screenOrientation="portrait">
                </activity>
                <activity
                    android:name="com.valbonet.wakeuplyapp.WatchFragmentActivity"
                    android:theme="@style/AppThemeDark"
                    android:screenOrientation="portrait">
                </activity>

                <activity
                    android:name=".presentation.alarms.AlarmAlertVideoActivity"
                    android:label="@string/app_name"
                    android:screenOrientation="portrait"
                    android:directBootAware="true"
                    android:excludeFromRecents="true"
                    android:resizeableActivity="false"
                    android:showOnLockScreen="true"
                    android:taskAffinity=""
                    android:windowSoftInputMode="stateAlwaysHidden"
                    android:theme="@style/AppThemeDark">
                </activity>
                <activity
                    android:name=".presentation.ads.FacebookNativeActivity"
                    android:label="@string/app_name"
                    android:screenOrientation="portrait"
                    android:directBootAware="true"
                    android:excludeFromRecents="true"
                    android:resizeableActivity="false"
                    android:showOnLockScreen="true"
                    android:taskAffinity=""
                    android:windowSoftInputMode="stateAlwaysHidden"
                    android:theme="@style/AppThemeDark">
                </activity>
                <activity
                    android:name=".presentation.ads.FacebookNativeAsInterstitialActivity"
                    android:label="@string/app_name"
                    android:screenOrientation="portrait"
                    android:directBootAware="true"
                    android:excludeFromRecents="true"
                    android:resizeableActivity="false"
                    android:showOnLockScreen="true"
                    android:taskAffinity=""
                    android:windowSoftInputMode="stateAlwaysHidden"
                    android:theme="@style/AppThemeDark">
                </activity>
        <activity
                    android:name=".presentation.alarms.PreviewVideoActivity"
                    android:theme="@style/AppThemeDark"
                    android:screenOrientation="portrait">
                </activity>
                <activity
                    android:name="com.facebook.ads.AudienceNetworkActivity"
                    android:hardwareAccelerated="true">
                </activity>
                <service android:name=".presentation.alarmclock.AlarmClockService"/>
                <service android:name=".presentation.alarmclock.NotificationService"/>
                <receiver android:name=".presentation.alarmclock.ReceiverAlarm">
                    <intent-filter>
                        <action android:name="android.intent.action.BOOT_COMPLETED" />
                    </intent-filter>
                </receiver>
                <receiver android:name=".presentation.alarmclock.ReceiverNotificationRefresh"/>
                <receiver android:name=".presentation.alarmclock.NotificationDismissedReceiver"></receiver>
                <receiver android:name=".presentation.alarmclock.ReceiverDeviceBoot">
                    <intent-filter>
                        <action android:name="android.intent.action.BOOT_COMPLETED"/>
                    </intent-filter>
                    <intent-filter>
                        <action android:name="android.intent.action.PACKAGE_REPLACED" />
                        <data android:scheme="package" />
                    </intent-filter>
                </receiver>

                <!-- Sample AdMob App ID: ca-app-pub-5854207430120293~3905252542 -->
                <meta-data
                    android:name="com.google.android.gms.ads.APPLICATION_ID"
                    android:value="ca-app-pub-5854207430120293~3905252542"/>


                <!-- Used for Google Play Store Campaign Measurement-->
                <receiver android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
                    android:enabled="true"
                    android:exported="true">
                    <intent-filter>
                        <action android:name="com.android.vending.INSTALL_REFERRER" />
                    </intent-filter>
                </receiver>
                <service android:name="com.google.android.gms.analytics.CampaignTrackingService"
                    android:enabled="true"
                    android:exported="false" />

            </application>

        </manifest>